{
    "compilerOptions": {
      "experimentalDecorators": true,
      "noEmit": true,
      "target": "ESNext",
      "module": "CommonJS",
      "strict": true,
      "noImplicitAny": true,
      "strictFunctionTypes": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "strictPropertyInitialization": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }